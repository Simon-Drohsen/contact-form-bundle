{% if form is not empty %}
    {{ form_start(form) }}

    {{ form_row(form._token) }}

    <div class="cf-width-1">
        {{ form_row(form.firstname) }}
    </div>

    <div class="cf-width-1">
        {{ form_row(form.lastname) }}
    </div>

    <div class="cf-width-1">
        {{ form_row(form.email) }}
    </div>

    <div class="cf-width-1">
        {{ form_row(form.message) }}
    </div>

    <div class="cf-width-1">
        {{ form_row(form.submit) }}
    </div>

    {{ form_end(form, {render_rest: false}) }}
{% endif %}
